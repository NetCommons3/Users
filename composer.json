{
    "name":        "netcommons/users",
    "description": "Users Plugin for CakePHP",
    "type":        "cakephp-plugin",
    "keywords":    ["cakephp", "user"],
    "homepage":    "http://www.netcommons.org/",
    "license":     "NetCommons License",
    "authors": [
        {
            "name":     "NetCommons Community",
            "homepage": "https://github.com/NetCommons3/Users/graphs/contributors"
        }
    ],
    "extra": {
        "installer-paths": {
            "app/Plugin/{$name}": ["type:cakephp-plugin"]
        }
    },
    "require": {
        "cakephp/cakephp":        "~2.4",
        "cakephp/debug_kit":      "~2.2",
        "cakedc/migrations":      "~2.2",
        "twbs/bootstrap":         "~3.1",
        "components/jquery":      "~2.1"
    },
    "require-dev": {
        "netcommons/auth":        "@dev",
        "netcommons/roles":       "@dev",
        "netcommons/rooms":       "@dev",
        "mustangostang/spyc":     "@dev",
        "satooshi/php-coveralls": "@dev"
    },
    "config": {
        "vendor-dir": "vendors"
    }
}
